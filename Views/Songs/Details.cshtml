@model MusicSystem.Models.Song

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Song</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DurationInSeconds)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DurationInSeconds)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrackNumber)
        </dt>
        <dd class="col-sm-10">
            @{
                TimeSpan time2 = TimeSpan.FromSeconds(@Model.DurationInSeconds);
                <p>@time2.ToString(@"hh\:mm\:ss")</p>
            }
        </dd>
        <dt class="col-sm-2">
            Album Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.Title)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
